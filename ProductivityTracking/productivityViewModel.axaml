<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SoftwareProjectManager.ViewModels"
             x:Class="SoftwareProjectManager.Views.ProductivityView">

    <!-- Bind this view to its ViewModel -->
    <UserControl.DataContext>
        <vm:ProductivityViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20" Spacing="10">

        <!-- Project Name -->
        <TextBlock Text="Project Name:" />
        <TextBox Text="{Binding Project}" Width="250" />

        <!-- Phase -->
        <TextBlock Text="Phase (e.g., Analysis, Design):" />
        <TextBox Text="{Binding Phase}" Width="250" />

        <!-- Weekly Hours -->
        <TextBlock Text="Weekly Hours:" />
        <TextBox Text="{Binding WeeklyHours}" Width="100" />

        <!-- Total Hours -->
        <TextBlock Text="Total Hours:" />
        <TextBox Text="{Binding TotalHours}" Width="100" />

        <!-- Description -->
        <TextBlock Text="Description:" />
        <TextBox Text="{Binding Description}" Width="300" AcceptsReturn="True" Height="60"/>

        <!-- Submit Button -->
        <Button Content="Add Entry" Command="{Binding AddEntryCommand}" Width="120" Margin="0,10,0,0" />

        <!-- List of Existing Entries -->
        <TextBlock Text="Saved Entries:" FontWeight="Bold" Margin="0,20,0,0"/>
        <ListBox Items="{Binding Entries}" Height="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Project}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PhaseName}" FontStyle="Italic"/>
                        <TextBlock Text="{Binding Description}" FontSize="12"/>
                        <TextBlock Text="{Binding WeeklyHours}" />
                        <TextBlock Text="{Binding TotalHours}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </StackPanel>
</UserControl>
